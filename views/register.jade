extends layout
block content
    .main.col-md-6.col-md-offset-3
        form.form-signin(action="/register",method="post" role="form")
            h2.form-signin-heading Please register
            input.mrgb20.input-lg.form-control(type="text" name="username" minlength=2 placeholder="Your name" required autofocus)
            input.mrgb20.input-lg.form-control(type="password" name="password" minlength=3 placeholder="Your password" required)
            button.mrgb20.mytext.btn.btn-lg.btn-primary.btn-block.btn-success(type="submit") Register
            a.mytext.btn.btn-primary.btn-lg.btn-block(href="/register") or Log in
        if (errors[0])
            #errors.alert.alert-danger #{errors}
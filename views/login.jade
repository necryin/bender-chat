extends layout

block content
  .main.col-md-6.col-md-offset-3
      form.form-signin(action="/login",method="post" role="form")
          h2.form-signin-heading Please log in
          input.input-lg.form-control(type="text" name="username" minlength=2 placeholder="Your name" required autofocus)
          input.input-lg.form-control(type="password" name="password" minlength=3 placeholder="Your password" required)
          button.mytext.btn.btn-lg.btn-primary.btn-block.btn-success(type="submit") Log in
          a.mytext.btn.btn-primary.btn-lg.btn-block(href="/register") Register (if not)
      if (errors[0])
          #errors.alert.alert-danger #{errors}

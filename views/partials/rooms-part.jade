accordion
    accordion-group
        ul.list-group
            li.collapse.in.list-group-item(ng-repeat="room in rooms")
                span {{room.name}}
                    i.mrg4.fa.fa-lock(ng-show="room.private")
                    button.btn.btn-default.btn-xs(ng-click="joinRoom(room.name, room.private)" ng-show="notInRoom(room.people)") Join
                    //button.btn.btn-default.btn-xs(ng-click="deleteRoom(room.name)" ng-show="isBoss(room.owner)") Remove
                    //button.btn.btn-default.btn-xs(ng-click="leaveRoom(room.name)" ng-show="showLeave(room.name)") Leave
                    i.fa.fa-chevron-left.pull-right(ng-show="!nir")
        accordion-heading List of rooms
            button.createRoomBtn.btn.btn-default.btn-xs(ng-click="$event.preventDefault(); $event.stopPropagation(); createRoom();") Create room
            span.badge.pull-right {{roomsCount + 0}}